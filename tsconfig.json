{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "es2022",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "src",    
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src", "src/app", "src/interface"],
  "exclude": ["node_modules", "src/test", "src/**/*.md"]
}